.container{:style => "color:black;"}
  .row
    .col-md-4.col-md-offset-4
      = simple_form_for @site, remote: false do |f|
        = f.input :name
        = f.button :submit, 'add site'
  .row
    %table.table.table-striped
      %thead
        %tr
          %th Site
      %tbody
        - @sites.each do |site|
          %tr
            %td= site.name.truncate(100).capitalize
            %td
              = link_to site, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger' do
                %span.glyphicon.glyphicon-trash
